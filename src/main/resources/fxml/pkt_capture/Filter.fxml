<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import org.controlsfx.control.CheckComboBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<fx:root xmlns="http://javafx.com/javafx/8"
         xmlns:fx="http://javafx.com/fxml"
         fx:id="root"
         type="javafx.scene.layout.HBox"
         spacing="10"
         alignment="CENTER">
    <Label text="Rx:" />
    <CheckComboBox fx:id="rxFilter"
                   minWidth="210"
                   maxWidth="210" />
    <Label text="Tx :" />
    <CheckComboBox fx:id="txFilter"
                   minWidth="210"
                   maxWidth="210" />
    <Label text="Filter (BPF):" />
    <TextField fx:id="bpfFilter"
               minWidth="210"
               maxWidth="Infinity"
               HBox.hgrow="ALWAYS" />
    <Button fx:id="applyBtn"
            text="Apply"
            styleClass="normalButton"
            disable="true"/>
</fx:root>
