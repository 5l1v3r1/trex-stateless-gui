<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.StackPane?>


<AnchorPane xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.exalttech.trex.ui.controllers.ConnectDialogController"
            fx:id="mainViewContainer"
            minWidth="-1.0"
            prefWidth="450.0"
            minHeight="195.0"
            prefHeight="195.0"
            maxHeight="600.0"
            styleClass="connectDialogWrapper">
    <AnchorPane prefWidth="371.0"
                minHeight="-1.0"
                prefHeight="-1.0"
                styleClass="connectContent"
                AnchorPane.topAnchor="15.0"
                AnchorPane.rightAnchor="15.0"
                AnchorPane.bottomAnchor="58.0"
                AnchorPane.leftAnchor="15.0">
        <Label text="Connections"
               AnchorPane.topAnchor="15.0"
               AnchorPane.leftAnchor="30.0"/>
        <ComboBox fx:id="connectionsCB"
                  prefWidth="200.0"
                  prefHeight="2.0"
                  editable="true"
                  AnchorPane.topAnchor="12.0"
                  AnchorPane.rightAnchor="30.0"
                  AnchorPane.leftAnchor="140.0"/>
        <TitledPane fx:id="advanceTitledPan"
                    prefWidth="342.0"
                    prefHeight="30.0"
                    animated="false"
                    collapsible="true"
                    expanded="false"
                    style="-fx-background-color:#FFFFFF;-fx-border-width: 0 0 0 0;"
                    text="Show advanced options..."
                    onMouseClicked="#handleTitledPanelClicking"
                    AnchorPane.topAnchor="50.0"
                    AnchorPane.rightAnchor="15.0"
                    AnchorPane.leftAnchor="14.0">
            <GridPane>
                <columnConstraints>
                    <ColumnConstraints minWidth="10.0"
                                       prefWidth="90.0"
                                       maxWidth="148.0"
                                       hgrow="SOMETIMES"/>
                    <ColumnConstraints minWidth="10.0"
                                       prefWidth="100.0"
                                       maxWidth="228.0"
                                       hgrow="SOMETIMES"/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="30.0"/>
                    <RowConstraints minHeight="30.0"/>
                    <RowConstraints minHeight="30.0"/>
                    <RowConstraints minHeight="30.0"/>
                    <RowConstraints minHeight="30.0"/>
                </rowConstraints>
                <Label text="Sync Port"
                       GridPane.rowIndex="0"
                       GridPane.columnIndex="0"/>
                <TextField fx:id="rpcPort"
                           text="4501"
                           GridPane.rowIndex="0"
                           GridPane.columnIndex="1"/>
                <Label text="Async Port"
                       GridPane.rowIndex="1"
                       GridPane.columnIndex="0"/>
                <TextField fx:id="asyncPort"
                           text="4500"
                           GridPane.rowIndex="1"
                           GridPane.columnIndex="1"/>
                <Label text="Scapy Port"
                       GridPane.rowIndex="2"
                       GridPane.columnIndex="0"/>
                <TextField fx:id="scapyPort"
                           text="4507"
                           GridPane.rowIndex="2"
                           GridPane.columnIndex="1"/>
                <Label GridPane.rowIndex="3"
                       GridPane.columnIndex="0"
                       text="Name"/>
                <TextField fx:id="nameTF"
                           text="Client1"
                           GridPane.rowIndex="3"
                           GridPane.columnIndex="1"/>
                <Label GridPane.rowIndex="4"
                       GridPane.columnIndex="0"
                       text="Mode"/>
                <StackPane GridPane.rowIndex="4"
                           GridPane.columnIndex="1">
                    <fx:define>
                        <ToggleGroup fx:id="mode" />
                    </fx:define>
                    <RadioButton fx:id="readOnlyRB"
                                 maxWidth="-1.0"
                                 disable="true"
                                 mnemonicParsing="false"
                                 selected="false"
                                 text="Read Only"
                                 toggleGroup="$mode"
                                 StackPane.alignment="CENTER_LEFT"/>
                    <RadioButton fx:id="fullControlRB"
                                 disable="false"
                                 mnemonicParsing="false"
                                 selected="true"
                                 text="Full Control"
                                 toggleGroup="$mode"
                                 StackPane.alignment="CENTER_RIGHT"/>
                </StackPane>
            </GridPane>
        </TitledPane>
        <ProgressIndicator fx:id="connectSpinner"
                           layoutX="44.0"
                           layoutY="260.0"
                           prefWidth="34.0"
                           prefHeight="22.0"
                           disable="false"
                           focusTraversable="false"
                           progress="-1.0"
                           visible="false"/>
        <Label prefWidth="16.0"
               prefHeight="16.0"
               style="-fx-cursor:hand;"
               styleClass="deleteConnection"
               text=""
               onMouseClicked="#handleDeleteConnections"
               AnchorPane.topAnchor="18.0"
               AnchorPane.rightAnchor="9.0">
            <tooltip>
                <Tooltip text="Delete Connection" />
            </tooltip>
        </Label>
    </AnchorPane>
    <Button fx:id="connectButton"
            prefWidth="90.0"
            prefHeight="22.0"
            mnemonicParsing="false"
            styleClass="normalButton"
            text="Connect"
            onAction="#handleConnectButton"
            AnchorPane.bottomAnchor="14.0"
            AnchorPane.leftAnchor="240.0"/>
    <Button fx:id="dialogCancelButton"
            prefWidth="90.0"
            prefHeight="22.0"
            mnemonicParsing="false"
            styleClass="cancelButton"
            text="Cancel"
            onMouseClicked="#handleCloseDialog"
            AnchorPane.bottomAnchor="14.0"
            AnchorPane.leftAnchor="345.0"/>
</AnchorPane>
