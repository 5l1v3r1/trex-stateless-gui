<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Rectangle?>
<fx:root fx:id="rootPortInfoTabConfig"
         xmlns:fx="http://javafx.com/fxml"
         type="javafx.scene.layout.BorderPane">
    <center>
        <GridPane fx:id="gridPanePortInfoTabConfig"
                  alignment="top_center"
                  hgap="10" vgap="10" >
            <fx:define>
                <Rectangle fx:id="s" width="12" height="12"/>
            </fx:define>
            <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>

            <Label text="Mode:"   GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <HBox GridPane.columnIndex="1" GridPane.rowIndex="1" GridPane.columnSpan="2" >
                <RadioButton fx:id="l2Mode" selected="false" text="L2">
                    <padding><Insets right="10"/></padding>
                    <toggleGroup>
                        <ToggleGroup fx:id="layerMode" />
                    </toggleGroup>
                </RadioButton>
                <RadioButton fx:id="l3Mode" id="l3Mode" selected="false" text="L3" toggleGroup="$layerMode" />
            </HBox>

            <Label text="Source:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
            <HBox GridPane.rowSpan="2" GridPane.columnIndex="1" GridPane.rowIndex="2" GridPane.columnSpan="2">
                <TextField fx:id="l2Source" disable="true" minWidth="${16 * s.width}" />
                <TextField fx:id="l3Source" minWidth="${16 * s.width}" />
            </HBox>

            <Label text="Destination:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
            <HBox GridPane.columnIndex="1" GridPane.rowIndex="4" GridPane.columnSpan="2">
                <TextField fx:id="l2Destination" id="l2Destination" text="" minWidth="${16 * s.width}" />
                <TextField fx:id="l3Destination" id="l3Destination" text="" minWidth="${16 * s.width}" />
            </HBox>
            <Label fx:id="arpLabel" text="ARP resolution:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
            <Label fx:id="arpStatus" id="arpStatus" text="" minWidth="${16 * s.width}" GridPane.columnIndex="1" GridPane.rowIndex="5"  GridPane.columnSpan="2" />

            <Label fx:id="pingLabel" text="Ping:" GridPane.columnIndex="0" GridPane.rowIndex="6" />
            <HBox spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="6">
                <TextField fx:id="pingDestination" text="" promptText="Destination address" minWidth="${16 * s.width}" />
                <Button fx:id="pingCommandBtn" text="Ping" />
            </HBox>
        </GridPane>
    </center>
    <bottom>
        <BorderPane>
            <center>
                <Button fx:id="saveBtn" id="applyBtn" text="Apply" styleClass="normalButton" />
            </center>
            <padding>
                <Insets bottom="10" />
            </padding>
        </BorderPane>
    </bottom>
</fx:root>