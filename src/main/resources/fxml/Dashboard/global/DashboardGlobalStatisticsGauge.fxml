<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<?import jfxtras.labs.scene.control.gauge.linear.SimpleMetroArcGauge?>


<fx:root xmlns="http://javafx.com/javafx/8"
         xmlns:fx="http://javafx.com/fxml"
         type="javafx.scene.layout.AnchorPane"
         minWidth="115.0"
         styleClass="dashboardStatsContainer">
    <VBox alignment="CENTER"
          AnchorPane.leftAnchor="5.0"
          AnchorPane.topAnchor="5.0"
          AnchorPane.rightAnchor="5.0"
          AnchorPane.bottomAnchor="5.0">
        <SimpleMetroArcGauge fx:id="gauge"
                             maxWidth="115"
                             minValue="0.0"
                             maxValue="1.0"
                             accessibleHelp="accessibleHelp"
                             id="cpuIndicator"
                             VBox.vgrow="ALWAYS"/>
        <Label fx:id="titleLabel"
               styleClass="gaugeTitle"/>
    </VBox>
</fx:root>
