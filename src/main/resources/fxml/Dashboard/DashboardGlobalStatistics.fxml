<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<?import com.exalttech.trex.ui.views.DashboardGlobalStatisticsGauge?>
<?import com.exalttech.trex.ui.views.DashboardGlobalStatisticsPanel?>


<fx:root xmlns="http://javafx.com/javafx/8"
         xmlns:fx="http://javafx.com/fxml"
         type="javafx.scene.layout.GridPane"
         fx:id="root"
         minHeight="190.0"
         maxHeight="190.0"
         hgap="10"
         vgap="10">
    <columnConstraints>
        <ColumnConstraints percentWidth="20"/>
        <ColumnConstraints percentWidth="20"/>
        <ColumnConstraints percentWidth="20"/>
        <ColumnConstraints percentWidth="20"/>
        <ColumnConstraints percentWidth="20"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints prefHeight="90"/>
        <RowConstraints prefHeight="90"/>
    </rowConstraints>
    <DashboardGlobalStatisticsGauge fx:id="cpuGauge"
                                    title="CPU"
                                    GridPane.columnIndex="0"
                                    GridPane.rowIndex="0"/>
    <DashboardGlobalStatisticsPanel fx:id="totalTx"
                                    title="Total Tx L2"
                                    GridPane.columnIndex="1"
                                    GridPane.rowIndex="0"/>
    <DashboardGlobalStatisticsPanel fx:id="totalTxL1"
                                    title="Total Tx L1"
                                    GridPane.columnIndex="2"
                                    GridPane.rowIndex="0"/>
    <DashboardGlobalStatisticsPanel fx:id="totalPps"
                                    title="Total PPS"
                                    GridPane.columnIndex="3"
                                    GridPane.rowIndex="0"/>
    <DashboardGlobalStatisticsPanel fx:id="dropRate"
                                    isColored="true"
                                    title="Drop Rate"
                                    GridPane.columnIndex="4"
                                    GridPane.rowIndex="0"/>
    <DashboardGlobalStatisticsGauge fx:id="rxCpuGauge"
                                    title="Rx CPU"
                                    GridPane.columnIndex="0"
                                    GridPane.rowIndex="1"/>
    <DashboardGlobalStatisticsPanel fx:id="totalRx"
                                    title="Total Rx"
                                    GridPane.columnIndex="1"
                                    GridPane.rowIndex="1"/>
    <DashboardGlobalStatisticsPanel fx:id="totalStream"
                                    title="Total Stream"
                                    GridPane.columnIndex="2"
                                    GridPane.rowIndex="1"/>
    <DashboardGlobalStatisticsPanel fx:id="activePort"
                                    title="Active Ports"
                                    GridPane.columnIndex="3"
                                    GridPane.rowIndex="1"/>
    <DashboardGlobalStatisticsPanel fx:id="queueFull"
                                    isColored="true"
                                    title="Queue Full"
                                    GridPane.columnIndex="4"
                                    GridPane.rowIndex="1"/>
</fx:root>
