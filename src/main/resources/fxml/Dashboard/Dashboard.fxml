<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>

<?import com.exalttech.trex.ui.controllers.dashboard.filters.DashboardFilters?>
<?import com.exalttech.trex.ui.controllers.dashboard.global.DashboardGlobalStatistics?>
<?import com.exalttech.trex.ui.controllers.dashboard.tabs.charts.DashboardTabCharts?>
<?import com.exalttech.trex.ui.controllers.dashboard.tabs.latency.DashboardTabLatency?>
<?import com.exalttech.trex.ui.controllers.dashboard.tabs.ports.DashboardTabPorts?>
<?import com.exalttech.trex.ui.controllers.dashboard.tabs.streams.DashboardTabStreams?>


<BorderPane xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml"
            style="-fx-background-color: #f0f0f0"
            prefWidth="1000"
            prefHeight="700"
            fx:controller="com.exalttech.trex.ui.controllers.dashboard.Dashboard"
            fx:id="root">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
    <top>
        <DashboardGlobalStatistics/>
    </top>
    <left>
        <AnchorPane>
            <DashboardFilters fx:id="portsFilter"
                              onFiltersChanged="#handleUpdate"
                              AnchorPane.leftAnchor="0.0"
                              AnchorPane.rightAnchor="10.0"
                              AnchorPane.topAnchor="11.0"
                              AnchorPane.bottomAnchor="1.0"/>
        </AnchorPane>
    </left>
    <center>
        <AnchorPane>
            <TabPane styleClass="statRightPaneContent, floating"
                     tabClosingPolicy="UNAVAILABLE"
                     AnchorPane.leftAnchor="0.0"
                     AnchorPane.rightAnchor="0.0"
                     AnchorPane.topAnchor="5.0"
                     AnchorPane.bottomAnchor="0.0">
                <Tab text="Ports">
                    <DashboardTabPorts fx:id="ports"/>
                </Tab>
                <Tab text="Streams">
                    <DashboardTabStreams fx:id="streams"/>
                </Tab>
                <Tab text="Latency">
                    <DashboardTabLatency fx:id="latency"/>
                </Tab>
                <Tab text="Charts">
                    <DashboardTabCharts fx:id="charts"/>
                </Tab>
                <Tab text="Capture"
                     disable="true">
                </Tab>
            </TabPane>
        </AnchorPane>
    </center>
</BorderPane>
