<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>

<?import com.exalttech.trex.ui.controllers.dashboard.filters.DashboardPortsSelector?>
<?import com.exalttech.trex.ui.controllers.dashboard.filters.DashboardStreamsSelector?>
<?import com.exalttech.trex.ui.controllers.dashboard.global.DashboardGlobalStatistics?>
<?import com.exalttech.trex.ui.controllers.dashboard.tabs.charts.Charts?>
<?import com.exalttech.trex.ui.controllers.dashboard.tabs.latency.Latency?>
<?import com.exalttech.trex.ui.controllers.dashboard.tabs.ports.Ports?>
<?import com.exalttech.trex.ui.controllers.dashboard.tabs.streams.Streams?>


<BorderPane xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml"
            style="-fx-background-color: #f0f0f0"
            prefWidth="1200"
            prefHeight="700"
            fx:controller="com.exalttech.trex.ui.controllers.dashboard.Dashboard"
            fx:id="root">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
    <top>
        <DashboardGlobalStatistics/>
    </top>
    <left>
        <AnchorPane>
            <DashboardPortsSelector fx:id="portsSelector"
                                    onFiltersChanged="#handleFiltersChanged"
                                    AnchorPane.leftAnchor="0.0"
                                    AnchorPane.rightAnchor="10.0"
                                    AnchorPane.topAnchor="11.0"
                                    AnchorPane.bottomAnchor="1.0"/>
            <DashboardStreamsSelector fx:id="streamsSelector"
                                      visible="false"
                                      AnchorPane.leftAnchor="0.0"
                                      AnchorPane.rightAnchor="10.0"
                                      AnchorPane.topAnchor="11.0"
                                      AnchorPane.bottomAnchor="1.0"/>
        </AnchorPane>
    </left>
    <center>
        <AnchorPane>
            <TabPane fx:id="tabPane"
                     styleClass="statRightPaneContent, floating"
                     tabClosingPolicy="UNAVAILABLE"
                     AnchorPane.leftAnchor="0.0"
                     AnchorPane.rightAnchor="0.0"
                     AnchorPane.topAnchor="5.0"
                     AnchorPane.bottomAnchor="0.0">
                <Tab text="Ports"
                     onSelectionChanged="#handleTabChanged">
                    <Ports fx:id="ports"/>
                </Tab>
                <Tab text="Streams"
                     onSelectionChanged="#handleTabChanged">
                    <Streams fx:id="streams"/>
                </Tab>
                <Tab text="Latency"
                     onSelectionChanged="#handleTabChanged">
                    <Latency fx:id="latency"/>
                </Tab>
                <Tab text="Charts"
                     onSelectionChanged="#handleTabChanged">
                    <Charts fx:id="charts"/>
                </Tab>
            </TabPane>
            <Button fx:id="clearButton"
                    mnemonicParsing="false"
                    styleClass="normalButton"
                    text="Clear"
                    onAction="#handleClearCacheButtonClicked"
                    AnchorPane.topAnchor="6.0"
                    AnchorPane.rightAnchor="0.0"/>
        </AnchorPane>
    </center>
</BorderPane>
