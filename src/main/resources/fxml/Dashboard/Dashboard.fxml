<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.BorderPane?>

<?import com.exalttech.trex.ui.views.DashboardGlobalStatistics?>
<?import com.exalttech.trex.ui.views.DashboardTabPorts?>
<?import com.exalttech.trex.ui.views.DashboardTabStreams?>


<BorderPane xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml"
            style="-fx-background-color: #f0f0f0"
            prefWidth="800"
            prefHeight="700">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
    <top>
        <DashboardGlobalStatistics/>
    </top>
    <center>
        <TabPane styleClass="statRightPaneContent, floating"
                 tabClosingPolicy="UNAVAILABLE">
            <Tab text="Ports">
                <DashboardTabPorts/>
            </Tab>
            <Tab text="Streams">
                <DashboardTabStreams/>
            </Tab>
            <Tab text="Latency"
                 disable="true">
            </Tab>
            <Tab text="Capture"
                 disable="true">
            </Tab>
        </TabPane>
    </center>
</BorderPane>
